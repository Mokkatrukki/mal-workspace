{
    "name": "own-mal-db",
    "version": "1.0.0",
    "description": "Own MyAnimeList Database with REST API and MCP integration",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "db:migrate": "tsx src/database/migrate.ts",
        "db:migrate:tv-special": "tsx src/database/runMigration.ts",
        "db:migrate:reviews": "tsx src/database/migrateReviews.ts",
        "db:seed": "tsx src/scripts/seedGenres.ts",
        "anime": "tsx src/cli/crawler-cli.ts",
        "mcp": "tsx src/mcp/anime-search.ts",
        "lint": "eslint src/**/*.ts",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "anime",
        "myanimelist",
        "database",
        "api",
        "mcp"
    ],
    "author": "Leo Vainio",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@scalar/express-api-reference": "^0.8.19",
        "@types/pg": "^8.11.10",
        "chalk": "^5.6.2",
        "cli-progress": "^3.12.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "inquirer": "^12.9.6",
        "ora": "^9.0.0",
        "pg": "^8.11.5",
        "readline": "^1.3.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.30",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "eslint": "^8.57.0",
        "tsx": "^4.7.1",
        "typescript": "^5.4.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
